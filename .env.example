# ===========================================
# Nextcloud Talk Claude Bot - Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Nextcloud Configuration
NEXTCLOUD_URL=https://your-nextcloud.example.com

# ERPNext Configuration (optional, for ERP integration)
ERPNEXT_URL=https://your-erpnext.example.com

# Installation Directory
INSTALL_DIR=/opt/nextcloud-claude-bot

# Path to bots configuration file
BOTS_CONFIG_FILE=/opt/nextcloud-claude-bot/bots_config.json

# Claude CLI path (usually auto-detected)
# CLAUDE_PATH=/usr/local/bin/claude

# WhisperFlow for audio transcription (optional)
# WHISPER_PYTHON=/opt/whisperflow/bin/python
# WHISPER_MODEL=base

# Default Nextcloud credentials (fallback, prefer per-user config in bots_config.json)
# NEXTCLOUD_USER=admin
# NEXTCLOUD_PASSWORD=your-app-password

# Anthropic API Key (for Claude)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here
